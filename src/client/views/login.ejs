<% layout('layout') -%>
<div class="center-small-box">
    <form id="signin" name="signin" method="post" action="/login">
        <h1>Sign In</h1>

        <input
            class="small"
            name="email"
            type="text"
            placeholder="Email" />

        <input
            class="small"
            name="password"
            type="password"
            placeholder="Password" />

        <input
            class="small"
            type="submit"
            value="Sign In" />
    </form>
</div>
