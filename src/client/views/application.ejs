        </select>

        <p class="form-error" id="school-error"></p>

        <h3>What year in school? <span class="required">*</span></h3>
        <select id="year" name="year">
          <%
            var val = data.year || '';
            yearOpts = {
              '': 'Select one',
              'freshman': 'Freshman',
              'sophomore': 'Sophomore',
              'junior': 'Junior',
