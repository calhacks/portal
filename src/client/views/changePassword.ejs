<% layout('layout') -%>
<div class="center-small-box">
    <div class="logo-container">
        <img src="./img/text-logo.png" />
    </div>
    <p>Please enter your new password below.</p>&nbsp;
    <form id="reset" name="reset" method="post" action="/reset?code=<%- code -%>">
    <input
        class="small"
        name="password"
        type="password"
        placeholder="password" />
        <div
            class="button-container">
            <input
                type="submit"
                value="Update" />
        </div>
    </form>
  </div>
